{
  "name": "open-ispilua-server",
  "bin": "./node_modules/.bin/homerun",
  "version": "1.0.0",
  "description": "Socket IO Server which manages open-ispilua mirror data",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start index.js --name=open-ispilua-server --watch",
    "restart": "pm2 restart open-ispilua-server",
    "stop": "pm2 stop open-ispilua-server",
    "kill": "pm2 delete open-ispilua-server",
    "logs": "pm2 logs open-ispilua-server",
    "test": "npm run lint",
    "lint": "npm run lint:js",
    "lint:js": "npm run lint:js:server && npm run lint:js:client",
    "lint:js:server": "jshint --reporter node_modules/jshint-stylish-ex/stylish.js . **.js",
    "lint:js:client": "cd ../client && jshint --reporter ../server/node_modules/jshint-stylish-ex/stylish.js . **.js",
    "preinstall": "npm run link:hooks",
    "postinstall": "cd ../client && bower install",
    "link:hooks": "cp ../hooks/pre-commit.sh ../.git/hooks/pre-commit || exit 0",
    "help": "node_modules/.bin/ls-scripts"
  },
  "author": "Irontec SL",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.4.7",
    "bluebird": "^2.10.0",
    "encoding": "^0.1.11",
    "express": "^4.13.3",
    "homerun": "^0.4.1",
    "jeyo-distans": "^0.2.0",
    "later": "^1.1.10",
    "moment": "^2.10.6",
    "npm-ls-scripts": "^0.1.2",
    "request": "^2.62.0",
    "socket.io": "^1.3.6",
    "underscore": "^1.8.3",
    "xml2js": "^0.4.12"
  },
  "devDependencies": {
    "jshint": "^2.8.0",
    "jshint-stylish-ex": "^0.2.0",
    "pm2": "^0.14.7"
  }
}
